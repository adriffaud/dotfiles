[module/i3]
type = internal/i3

pin-workspaces = false
strip-wsnumbers = false
index-sort = true
enable-click = true
enable-scroll = true
wrapping-scroll = false
reverse-scroll = true
fuzzy-match = false

format = <label-mode><label-state>

label-mode = %mode%
label-mode-foreground = ${colors.modulefg}
label-mode-padding-right = 1

label-focused-foreground = ${colors.modulefg}
label-focused-padding-right = 1

label-unfocused-padding-right = 1
label-unfocused-foreground = ${colors.grey}

label-visible-padding-right = 1
label-visible-foreground = ${colors.grey}

label-urgent-foreground = ${colors.red}
label-urgent-padding-right = 1

################################################################################

[module/date]
;https://github.com/jaagr/polybar/wiki/Module:-date
type = internal/date
; Seconds to sleep between updates
interval = 5
; See "http://en.cppreference.com/w/cpp/io/manip/put_time" for details on how to format the date string
; NOTE: if you want to use syntax tags here you need to use %%{...}
date = " %a %b %d"
time = %H:%M%
format-prefix = " ÔÅ≥"
format-foreground = ${colors.cyan}
label = "%date%, %time% "

################################################################################

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = false
label = %output%
click-right = pavucontrol
format-volume = <ramp-volume> <label-volume>
format-foreground = ${colors.green}
; Available tokens:
;   %percentage% (default)
;   %decibels%
label-muted = üîá muted
label-muted-foreground = #666

; Only applies if <ramp-volume> is used
ramp-volume-0 = üîà
ramp-volume-1 = üîâ
ramp-volume-2 = üîä

################################################################################

[module/pavolume]
type = custom/script
tail = true
label = %output%
exec = /home/adrien/.local/bin/i3-volume output default
click-right = exec pavucontrol
click-left = /home/adrien/.local/bin/i3-volume mute
scroll-up = /home/adrien/.local/bin/i3-volume up 5
scroll-down = /home/adrien/.local/bin/i3-volume down 5
format-foreground = ${colors.green}

################################################################################

