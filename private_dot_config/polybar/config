format-full-prefix = "ÔâÄ "
format-full-foreground = ${colors.yellow}

format-foreground = ${colors.yellow}

ramp-capacity-0 = ÔâÑ
ramp-capacity-1 = ÔâÉ
ramp-capacity-2 = ÔâÇ
